{% extends "base.twig" %}

{% block content %}
	<div class="breadcrumbs" xmlns:v="http://rdf.data-vocabulary.org/#">
        {{ function('bcn_display') }}
    </div>
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h3 class="article-h1">{{post.title}}</h3>
				<p class="blog-author">
					<span class="post-date">{{ post.post_date|date}}</span> <span>By</span><a href="{{post.author.path}}"> {{ post.author.name }} </a>
				</p>
				<div class="article-body">
					{{post.content}}
				</div>
			</section>
			<section class="comments">
				<div class="respond">
					<h3 class="h2">Nhận xét</h3>
					{{ comment_form }}
				</div>
				<div class="responses">
					{% for cmt in post.get_comments() %}
						{% include "comment.twig" with {comment:cmt} %}
					{% endfor %}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
